{
  "name": "@thream/api",
  "version": "0.0.1",
  "description": "Thream's application programming interface to stay close with your friends and communities.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Thream/api"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run format"
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}"
    },
    "github": {
      "release": false
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "npm run lint",
        "npm run test"
      ]
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "./src"
  },
  "ts-standard": {
    "files": [
      "./src/**/*.ts"
    ],
    "envs": [
      "node",
      "jest"
    ]
  },
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "dev": "concurrently -k -n \"TypeScript,Node\" -p \"[{name}]\" -c \"blue,green\" \"tsc --watch\" \"cross-env NODE_ENV=development nodemon -e js,json,yaml build/index.js\"",
    "lint": "ts-standard | snazzy",
    "format": "ts-standard --fix | snazzy",
    "test": "jest",
    "test:watchAll": "jest --watchAll",
    "test:clearCache": "jest --clearCache",
    "prepare": "npm run build"
  },
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-async-errors": "3.1.1",
    "express-http-to-https": "1.1.4",
    "express-rate-limit": "^5.1.3",
    "helmet": "4.1.1",
    "morgan": "1.10.0",
    "tslib": "2.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/cors": "2.8.8",
    "@types/express": "4.17.8",
    "@types/express-rate-limit": "^5.1.0",
    "@types/jest": "26.0.15",
    "@types/morgan": "1.9.1",
    "@types/node": "14.14.2",
    "@types/supertest": "2.0.10",
    "concurrently": "5.3.0",
    "cross-env": "7.0.2",
    "husky": "^4.3.0",
    "jest": "26.6.0",
    "nodemon": "2.0.6",
    "release-it": "^14.2.0",
    "rimraf": "^3.0.2",
    "snazzy": "8.0.0",
    "supertest": "5.0.0",
    "ts-jest": "26.4.1",
    "ts-standard": "9.0.0",
    "typescript": "4.0.3"
  }
}
