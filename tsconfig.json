{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["ES2019"],
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "declaration": false,
    "sourceMap": false,
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": false,
    "noEmitOnError": true,
    "importHelpers": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": false
  },
  "exclude": ["node_modules", "./temp/*"]
}
